.juvia-comment {
	min-height: 64px;
	margin-bottom: 1em;
}

.juvia-comment .juvia-metadata {
	margin-bottom: 0.5em;
}

.juvia-comment .juvia-metadata div {
	display: inline;
}

.juvia-comment .juvia-avatar {
	float: left;
	margin-left: -80px;
}

.juvia-comment .juvia-author {
	font-weight: bold;
}

.juvia-comment .juvia-creation-date {
	margin-left: 1em;
	font-size: smaller;
}

.juvia-comment .juvia-metadata,
.juvia-comment .juvia-data {
	margin-left: 80px;
}
