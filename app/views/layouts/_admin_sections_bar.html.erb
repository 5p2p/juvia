<nav id="sections_bar" class="container">
  <div class="row">
    <div class="sections col_9 clearleft">
      <% if can?(:read, Site) %>
        <div class="section <%= maybe_active(:sites) %>">
          <%= link_to "Sites (#{current_user.accessible_sites.count})", admin_sites_path %>
        </div>
      <% end %>
      <% if can?(:read, Comment) %>
        <div class="section <%= maybe_active(:comments) %>">
          <%= link_to "Comments (#{current_user.accessible_comments.count})", admin_comments_path %>
        </div>
      <% end %>
      <% if can?(:create, User) %>
        <div class="section <%= maybe_active(:users) %>">
          <%= link_to "Users (#{User.count})", admin_users_path %>
        </div>
      <% end %>
    </div>
    <div class="actions col_3 omega">
      <%= button_group do %>
        <% if can?(:create, User) %>
          <%= user_pill_button_link_to 'New user', new_admin_user_path %>
        <% end %>
        <% if can?(:create, Site) %>
          <%= add_pill_button_link_to 'New site', new_admin_site_path %>
        <% end %>
      <% end %>
    </div>
  </div>
</nav>
