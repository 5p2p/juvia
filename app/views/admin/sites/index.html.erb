<% if @sites.empty? %>
  <div class="sites empty">
    <p>You haven't registered any sites.</p>
    <p><%= add_button_link_to 'Create a new site', new_admin_site_path %></p>
  </div>
<% else %>
  <div class="list_with_actions">
    <% if can?(:create, Site) %>
      <div class="pre actions">
        <%= add_button_link_to 'Create a new site', new_admin_site_path %>
      </div>
    <% end %>

    <div class="sites resources list">
    <% @sites.each do |site| %>
      <%= div_for(site, :class => 'item container') do %>
        <div class="row">
          <div class="col_9 identity_column">
            <%= small_identity_tag(:site, site.name, [:admin, site]) %>
          </div>
          <div class="col_3 last info_column">
            <%= site.topics.count %> topics,
            <%= site.comments.count %> comments
          </div>
        </div>
      <% end %>
    <% end %>
    </div>

    <% if can?(:create, Site) %>
      <div class="post actions">
        <%= add_button_link_to 'Create a new site', new_admin_site_path %>
      </div>
    <% end %>
  </div>
<% end %>
